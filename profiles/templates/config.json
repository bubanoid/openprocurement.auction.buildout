{
    "styles": [
	"src/lib/angular-growl-2/build/angular-growl.min.css", 
        "src/assets/css/starter-template.css"
    ],
    "fonts": "src/assets/fonts/*",
    "html": [
	{% if with_index %}
	{
	    "name": "index",
	    "scripts": [
		"/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/vendor.js",
		"/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/{{ index_script }}"
	    ],
	    "styles": [
	        "/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/css/{{ main_css }}"
	    ],
	    "title": "Auction Software",
	    "controller": "ListingController"
	},
	{% endif %}
	{% if with_archive %}
	{
	    "name": "archive",
	    "scripts": [
		"/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/vendor.js",
		"/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/{{ archive_script }}"
	    ],
	    "styles": [
	        "/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/css/{{ main_css }}"
	    ], 
	    "title": "Auction Software",
	    "controller": "ArchiveController"
	},
	{% endif %}
	{
	    "name": "{{ name }}",
	    "scripts": [
		"/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/vendor.js",
		"/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/{{ app_script }}"
	    ],
 	    "styles": [
	        "/{{ parts_path }}/{{ parts['nginx.conf'].static_path }}/css/{{ main_css }}"
	    ], 
	    "title": "Auction Software",
	    "controller": "AuctionController"
	}
    ],
    "img": {
	    "png": "src/assets/img/img/*.png",
	    "icons": "src/assets/img/*.png"
    },
    "outDir": "{{ parts.buildout.directory}}/parts/{{ parts_path }}",
    "main_css": "{{ main_css }}",
    "db_name": "{{ parts['project'].auctions_couchdb_databese_name }}",
    "buildDir": "build",
    "app_name": "{{ app_script }}",
    "name": "{{ name }}",
    "devel": "{{ devel }}"
}
